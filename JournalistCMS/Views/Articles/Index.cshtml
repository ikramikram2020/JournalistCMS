@model List<JournalistCMS.Models.Article>
@{
    ViewBag.Title = "مقالاتي";
}
<div class="container mt-4">
    <h2 class="mb-3">قائمة المقالات الخاصة بي</h2>
    <a href="@Url.Action("Create")" class="btn btn-success mb-3">+ إضافة مقالة جديدة</a>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>العنوان</th>
                <th>تاريخ النشر</th>
                <th>التحكم</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.PublishDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="@Url.Action("Details", new { id = item.Id })">عرض</a>
                        <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = item.Id })">تعديل</a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.Id })">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>





