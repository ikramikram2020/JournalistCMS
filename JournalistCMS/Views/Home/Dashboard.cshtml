@{
    ViewBag.Title = "لوحة التحكم";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container-fluid bg-light py-5 px-4" style="min-height: 100vh;">
    <h1 class="fw-bold mb-4">👋 أهلاً بك، @ViewBag.User</h1>

    <!-- إحصائيات -->
    <div class="row row-cols-1 row-cols-md-4 g-4 mb-5">
        <div class="col">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted">المقالات المنشورة</h6>
                    <h3 class="fw-bold text-primary"><i class="bi bi-journal-text me-2"></i>25</h3>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted">قيد المراجعة</h6>
                    <h3 class="fw-bold text-warning"><i class="bi bi-hourglass-split me-2"></i>3</h3>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted">تعليقات جديدة</h6>
                    <h3 class="fw-bold text-success"><i class="bi bi-chat-dots me-2"></i>10</h3>
                </div>
            </div>
        </div>
      
    </div>

    <!-- الروابط السريعة -->
    <div class="mb-5">
        <h4 class="mb-3 fw-semibold text-dark">🔗 روابط سريعة</h4>
        <div class="d-flex flex-wrap gap-3">
            <a href="@Url.Action("Create", "Articles")" class="btn btn-dark"><i class="bi bi-pencil-square me-1"></i>مقالة جديدة</a>
            <a href="@Url.Action("Index", "Articles")" class="btn btn-outline-dark"><i class="bi bi-journal me-1"></i>مقالاتي</a>
            <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-success"><i class="bi bi-person-circle me-1"></i>ملفي الشخصي</a>
            <a href="@Url.Action("Statistics", "Dashboard")" class="btn btn-outline-primary"><i class="bi bi-graph-up-arrow me-1"></i>الإحصائيات</a>
        </div>
    </div>

    <!-- التنبيهات -->
    <div class="mb-4">
        <h4 class="mb-3 fw-semibold text-dark">📢 آخر التنبيهات</h4>
        <ul class="list-group list-group-flush shadow-sm">
            <li class="list-group-item"><i class="bi bi-chat-left-text-fill text-primary me-2"></i> تعليق جديد على "تكنولوجيا اليوم"</li>
            <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> تم نشر مقالتك "البيئة والتنمية"</li>
            <li class="list-group-item"><i class="bi bi-exclamation-circle-fill text-warning me-2"></i> هناك 2 مقالات بانتظار مراجعتك</li>
        </ul>
    </div>

    <div class="text-end mt-4">
        <a href="/Auth/Logout" class="btn btn-outline-danger"><i class="bi bi-box-arrow-right me-1"></i> تسجيل الخروج</a>
    </div>
</div>
